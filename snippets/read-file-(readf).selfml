(name [Read File Into Vector])

(trigger
    (tab readfile))

(only-in [source.c++, source.objc++])

(snippet [std::vector<char> v;
if(FILE%{TM_C_POINTER=" *"}fp = fopen(%{1=""filename""}, "r"))
{
	char buf[1024];
	while(size_t len = fread(buf, 1, sizeof(buf), fp))
		v.insert(v.end(), buf, buf + len);
	fclose(fp);
}])